@model UpdateBannerViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Banner</h4>
                    <p class="card-subtitle mb-4">Here’s a quick example to demonstrate Bootstrap’s form styles. Keep reading for documentation on required classes, form layout, and more.</p>

                    <form method="post" asp-area="Admin" asp-controller="Banner" asp-action="Update">

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Title">Banner</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Enter a description" />
                        </div>

                        <div class="form-group">
                            <label asp-for="VideoDescription">Video Description</label>
                            <input asp-for="VideoDescription" class="form-control" placeholder="Enter a video description" />
                        </div>

                        <div class="form-group">
                            <label asp-for="VideoUrl">Video Url</label>
                            <input asp-for="VideoUrl" class="form-control" placeholder="Enter a video url" />
                        </div>

                        <button type="submit" class="btn btn-success waves-effect waves-light">
                            <i class="bi bi-floppy"></i>
                            Save Changes
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>