@model CreateBlogViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Blog</h4>
                    <p class="card-subtitle mb-4">Here’s a quick example to demonstrate Bootstrap’s form styles. Keep reading for documentation on required classes, form layout, and more.</p>

                    <form method="post" asp-area="Admin" asp-controller="Blog" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="BlogCategoryId">Blog Category</label>
                            <select class="form-control" asp-for="BlogCategoryId" asp-items="ViewBag.BlogCategorySelectList">
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="BlogAuthorId">Blog Author</label>
                            <select class="form-control" asp-for="BlogAuthorId" asp-items="ViewBag.BlogAuthorSelectList">
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Enter a description" />
                            <div class="form-text">Short description to sum up blog</div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Content">Content</label>
                            <textarea asp-for="Content" class="form-control" placeholder="Enter a blog content here" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="CoverImageUrl">Image Url</label>
                            <input asp-for="CoverImageUrl" class="form-control" placeholder="Enter a image url" />
                        </div>

                        <button type="submit" class="btn btn-success waves-effect waves-light">
                            <i class="bi bi-floppy"></i>
                            Save
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>