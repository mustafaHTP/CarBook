@model List<GetCarsWithBrandDto>

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Car List</h4>
                    <p class="card-subtitle mb-4">
                        For basic styling—light padding and only horizontal
                        dividers—add the base class <code>.table</code> to any
                        <code>&lt;table&gt;</code>.
                    </p>

                    <div class="mb-2">
                        <a asp-area="Admin" asp-controller="Car" asp-action="Create" class="btn btn-success waves-effect waves-light">
                            <i class="fas fa-plus"></i>
                            Create Car
                        </a>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            There is no car here. Please create a new one.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Model</th>
                                        <th>Km</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; ++i)
                                    {
                                        <tr>
                                            <th scope="row">@(i + 1)</th>
                                            <td>@Model[i].Brand.Name</td>
                                            <td>@Model[i].Model.Name</td>
                                            <td>@Model[i].Km</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Car" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-warning text-white">
                                                    <i class="bi bi-pencil-fill"></i>
                                                    Edit
                                                </a>
                                                <a asp-area="Admin" asp-controller="Feature" asp-action="GetCarFeaturesByCarId" asp-route-carId="@Model[i].Id" asp class="btn btn-primary text-white">
                                                    <i class="fas fa-tools"></i>
                                                    Features
                                                </a>
                                                <a class="btn btn-info text-white">
                                                    <i class="bi bi-list"></i>
                                                    Detail
                                                </a>
                                                <a asp-area="Admin" asp-controller="Car" asp-action="Pricing" asp-route-id="@Model[i].Id" class="btn btn-success text-white">
                                                    <i class="bi bi-currency-dollar"></i>
                                                    Pricings
                                                </a>
                                                <a asp-area="Admin" asp-controller="Car" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger text-white">
                                                    <i class="bi bi-trash3-fill"></i>
                                                    Remove
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
