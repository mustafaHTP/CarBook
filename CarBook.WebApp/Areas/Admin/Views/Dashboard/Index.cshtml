<div class="container-fluid">
    @* Page Title *@
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0 font-size-18">Dashboard</h4>
            </div>
        </div>
    </div>
    @* END - Page Title*@

    @* Widget Statistics *@
    <div class="row">
        @await Component.InvokeAsync("CarCountWidget")
        @await Component.InvokeAsync("LocationCountWidget")
        @await Component.InvokeAsync("BrandCountWidget")
        @await Component.InvokeAsync("AverageCarRentalPriceWidget", new { rentalPeriods = new string[] { "week" } })
    </div>
    @* END - Widget Statistics*@

    <div class="row">
        <div class="col-lg-4">
            @await Component.InvokeAsync("BrandCarCountPieChartWidget")
        </div>

        <div class="col-lg-4">
            @await Component.InvokeAsync("RentalCountsByYearLineChartWidget")
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            @await Component.InvokeAsync("CarRentalPriceListWidget")
        </div>
        <div class="col-xl-6">
            @await Component.InvokeAsync("RecentBlogListWidget")
        </div>
    </div>
</div>