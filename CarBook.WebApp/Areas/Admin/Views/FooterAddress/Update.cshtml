@model UpdateFooterAddressViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Footer Address</h4>
                    <p class="card-subtitle mb-4">Here’s a quick example to demonstrate Bootstrap’s form styles. Keep reading for documentation on required classes, form layout, and more.</p>

                    <form method="post" asp-area="Admin" asp-controller="FooterAddress" asp-action="Update">

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Enter a description" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Address">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter a address" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter a contact us email" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone"></label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter a contact us phone number" />
                        </div>

                        <button type="submit" class="btn btn-success waves-effect waves-light">
                            <i class="bi bi-floppy"></i>
                            Save Changes
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>