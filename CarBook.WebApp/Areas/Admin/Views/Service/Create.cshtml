@model CreateServiceViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Service</h4>
                    <p class="card-subtitle mb-4">Here’s a quick example to demonstrate Bootstrap’s form styles. Keep reading for documentation on required classes, form layout, and more.</p>

                    <form method="post" asp-area="Admin" asp-controller="Service" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a service title" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Enter a service description" />
                        </div>

                        <div class="form-group">
                            <label asp-for="IconUrl">Icon Url</label>
                            <input asp-for="IconUrl" class="form-control" placeholder="Enter a icon url" />
                            <small class="form-text">You can find icon url in website template</small>
                        </div>

                        <button type="submit" class="btn btn-success waves-effect waves-light">
                            <i class="bi bi-floppy"></i>
                            Save
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>