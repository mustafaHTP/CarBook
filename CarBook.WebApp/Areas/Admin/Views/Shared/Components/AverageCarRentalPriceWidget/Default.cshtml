@model GetAverageCarRentalPriceDto

<div class="col-md-6 col-xl-3">
    <div class="card bg-success bg-gradient">
        <div class="card-body">
            <div class="mb-4">
                <span class="badge badge-soft-light float-right">@ViewBag.RentalPeriods</span>
                <h5 class="card-title mb-0 text-white">Average Car Rental Price</h5>
            </div>
            <div class="row d-flex align-items-center mb-4">
                <div class="col-8">
                    <h2 class="d-flex align-items-center text-white mb-0">
                        <i class="fas fa-dollar-sign mr-2"></i>
                        @Model.AveragePrice.ToString("F1")
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>