@model IEnumerable<GetBlogsDto>

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Latest Blogs</h4>
        <p class="card-subtitle mb-4 font-size-13">
            Latest blogs can be found here.
        </p>

        <div class="table-responsive">
            <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <h5 class="font-size-15 mb-1 font-weight-normal">
                                    @item.BlogAuthorName
                                </h5>
                            </td>
                            <td>
                                <h5 class="font-size-15 mb-1 font-weight-normal">
                                    @item.Title
                                </h5>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-rounded waves-effect waves-light" target="_blank" asp-area="" asp-controller="Blog" asp-action="GetById" asp-route-id="@item.Id">
                                    <h5 class="mb-1 font-weight-normal text-white">
                                        Open Blog
                                    </h5>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>