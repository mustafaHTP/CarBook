<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
        <div class="card">
        <div class="card-body">
            <div class="chartjs-size-monitor">
                <div class="chartjs-size-monitor-expand">
                    <div class=""></div>
                </div>
                <div class="chartjs-size-monitor-shrink">
                    <div class=""></div>
                </div>
            </div>

            <h4 class="card-title">Line Chart</h4>
            <p class="card-subtitle mb-4">Example of line chart with rental counts by year.</p>

            <canvas id="lineChart" width="758" height="379" style="display: block; height: 379px; width: 758px;" class="chartjs-render-monitor"></canvas>
        </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
        document.addEventListener("DOMContentLoaded", function () {
            // Fake rental count data for years 2019-2025
            const years = ['2019', '2020', '2021', '2022', '2023', '2024', '2025'];
            const rentalCounts = [150, 50, 200, 500, 340, 220, 450]; // Sample values

            var ctx = document.getElementById("lineChart").getContext("2d");

            new Chart(ctx, {
                type: "line",
                data: {
                    labels: years,
                    datasets: [{
                        label: "Rentals Count",
                        data: rentalCounts,
                        borderColor: "#4bc0c0", // Line color
                        backgroundColor: "rgba(75, 192, 192, 0.2)", // Area color
                        borderWidth: 2,
                        fill: true // Fill the area under the line
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
</script>