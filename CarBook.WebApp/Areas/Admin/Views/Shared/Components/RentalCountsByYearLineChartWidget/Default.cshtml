    <div class="card-body" style="height: 400px; overflow: hidden; padding-bottom: 100px">
        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>

        <h4 class="card-title">Rentals By Year</h4>
        <p class="card-subtitle mb-4">
            Rental counts by year in the system.
        </p>

        <canvas id="lineChart" width="758" height="379" style="display: block; height: 379px; width: 758px;" class="chartjs-render-monitor"></canvas>

    </div>
