@model CreateTestimonialViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Testimonial</h4>
                    <p class="card-subtitle mb-4">Here’s a quick example to demonstrate Bootstrap’s form styles. Keep reading for documentation on required classes, form layout, and more.</p>

                    <form method="post" asp-area="Admin" asp-controller="Testimonial" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a service title" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter a name" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl">Image Url</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Enter a image url" />
                            <small class="form-text">You can enter any image url on the internet</small>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comment">Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Enter a comment"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success waves-effect waves-light">
                            <i class="bi bi-floppy"></i>
                            Save
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>