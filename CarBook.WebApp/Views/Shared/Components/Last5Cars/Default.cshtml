@model IEnumerable<GetCarsWithRentalPricingsDto>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">What we offer</span>
                <h2 class="mb-2">Featured Vehicles</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(@item.Car.CoverImageUrl);">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a>@item.Car.BrandName @item.Car.ModelName</a></h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat">@item.Car.BrandName </span>
                                        <p class="price ml-auto">
                                            @item.RentalPricings?.FirstOrDefault(rp => rp.Name.Equals("day"))?.Price.ToString("C0")
                                            <span>/day</span>
                                        </p>
                                    </div>
                                    <p class="d-flex mb-0">
                                        <a asp-area="" asp-controller="Car" asp-action="GetById" asp-route-id="@item.Car.Id" class="btn btn-secondary py-2 ml-1 w-100">
                                            Details
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
