@model IEnumerable<GetBlogsDto>


<div class="sidebar-box ftco-animate">
    <h3>Recent Blog</h3>
    @foreach (var item in Model)
    {
        <div class="block-21 mb-4 d-flex">
            <a class="blog-img mr-4" style="background-image: url(@item.CoverImageUrl);"></a>
            <div class="text">
                <h3 class="heading"><a href="#">@item.Title</a></h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span> @item.CreatedDate.ToString("MMM. dd, yyyy", System.Globalization.CultureInfo.InvariantCulture)</a></div>
                    <div><a href="#"><span class="icon-person"></span> @item.BlogAuthorName</a></div>
                    <div>
                        <a asp-controller="Blog" asp-action="GetById" asp-route-id="@item.Id" asp-fragment="BlogComments">
                            <span class="icon-chat"></span>
                            @await Component.InvokeAsync("BlogCommentCount", new { blogId = item.Id })
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
