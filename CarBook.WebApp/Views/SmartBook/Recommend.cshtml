@model CreateCarRecommendationViewModel

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/website-template/images/smartbook-ai.jpeg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            Home
                            <i class="ion-ios-arrow-forward"></i>
                        </a>
                    </span>
                    <span>
                        SmartBook
                        <i class="ion-ios-arrow-forward"></i>
                    </span>
                </p>
                <h1 class="mb-3 bread">Car Rental AI Assistant</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-8">
                <div class="card mb-3 border-primary">
                    <div class="card-body">
                        <h3 class="card-title" style="text-align: center">SmartBook Chat</h3>
                        <p class="card-subtitle mb-4">
                            Enter your preferences and we will recommend you the best car for your needs.
                        </p>

                        <form method="post" asp-controller="SmartBook" asp-action="Recommend">
                            <div class="input-group">
                                <textarea asp-for="UserInput" type="text" rows="4" class="form-control"></textarea>
                            </div>
                            <span class="text-danger" asp-validation-for="UserInput"></span>
                            <div class="d-flex mt-3 justify-content-end">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    <i class="bi bi-box-arrow-in-up-right"></i>
                                    Submit
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
